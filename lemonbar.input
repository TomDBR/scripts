#!/bin/bash

. lemonbar.conf
pauseSong() {
	port="$(ss -tulpn | grep mpd | cut -d":" -f2 | cut -d" " -f1 | grep -v 8000)"
	mpc -p "$(ss -tulpn | grep mpd | cut -d":" -f2 | cut -d" " -f1 | grep -v 8000)" toggle
}

#tray="%{A:stalonetray &:} trayhere"

while read -r line ; do
	case $line in
		S*)
			clock="${line#?}"
			;;
		V*)
			volume="${line#?}"
			;;
		D*)
			disk="${line#?}"
			;;
		M*)
			music="${line#?}"
			;;
		T*)
			title="${line#?}"
			;;
		I*)
			ethnet="${line#?}"
			;;
		X*)
			wifi="${line#?}"
			;;
		B*)
			battery="${line#?}"
			;;
		W*)
			wm=""
			IFS=':'
			set -- ${line#?}
			while [ $# -gt 0 ]; do
				item="$1"
				#echo "item is $item" >> ~/tmp.test
				name=${item#?}
				#echo "name is $name" >> ~/tmp.test
				#wm="${wm}%{F${FG}}%{B${BG}}%{A:bspc monitor -f ${name}:} ${name} %{A}%{B-}%{F-}"
				case $item in
					[FoOuU]*)
						case $item in
							#f*)
								#FG=$COLOR_FREE_BG
								#BG=$COLOR_FREE_BG
								#UL=$BG
								#;;
							F*) FG=$COLOR_FOCUSED_FREE_FG
								BG=$COLOR_FOCUSED_FREE_BG
								UL=$BG
								;;
							o*)
								FG=$COLOR_OCCUPIED_FG
								BG=$COLOR_OCCUPIED_BG
								UL=$BG
								;;
							O*)
								FG=$COLOR_FOCUSED_OCCUPIED_FG
								BG=$COLOR_FOCUSED_OCCUPIED_BG
								UL=$BG
								;;
							u*)
								FG=$COLOR_URGENT_FG
								BG=$COLOR_URGENT_BG
								UL=$BG
								;;
							U*)
								FG=$COLOR_FOCUSED_URGENT_FG
								BG=$COLOR_FOCUSED_URGENT_BG
								UL=$BG
								;;
						esac
						wm="${wm}%{F${FG}}%{B${BG}}%{U${UL}}%{+u}%{A:bspc desktop -f ${name}:} ${name} %{A}%{B-}%{F-}%{-u}"
						;;
						 
					#[LTG]*)
						#wm="${wm}%{F$COLOR_STATE_FG}%{B$COLOR_STATE_BG} ${name} ${name} %{B-}%{F-}"
						#;;
				esac
				shift
			done
				;;
			esac
			#echo "${wm}" >> ~/tmp.test
			#printf "%s\n" "%{l}${wm}"
			printf "%s\n" "%{l}${wm}  ${title}%{c}${clock}%{r}%{A:mpc -p "$(ss -tulpn | grep mpd | cut -d":" -f2 | cut -d" " -f1 | grep 66)" toggle &>/dev/null:}${music}%{A} ${disk} |${volume} | ${ethnet} "
done
